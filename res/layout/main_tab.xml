<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingLeft="18dp"
	android:paddingRight="18dp">
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="96dip"
		android:orientation="horizontal"
		android:layout_marginTop="48dp"
		android:gravity="center_vertical|center_horizontal"
	>
	
		<ImageView
        	android:id="@+id/main_image"
        	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="24dp"		
        	/>
		
	</LinearLayout>
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="48dip"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
		android:background="@color/blue"
		android:layout_marginBottom="18dp"
	>
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
			android:layout_marginRight="9dp"
		>
            
            <ImageButton
				android:id="@+id/main_team"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabTeamClick"
			>

			</ImageButton>

			<Button 
			    android:background="@null" 
				android:text="@string/team_edit"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabTeamClick"
    		/>
            
		</LinearLayout>
		
		<LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" 
            android:layout_marginLeft="9dp">
            
            <ImageButton
				android:id="@+id/main_game"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabGameClick"
			>

			</ImageButton>
			
			<Button 
			    android:background="@null" 
				android:text="@string/game_edit"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabGameClick"
    		/>
            
		</LinearLayout>
		
	</LinearLayout>
	
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="48dip"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
		android:background="@color/blue"
		android:layout_marginBottom="18dp"
	>
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
			android:layout_marginRight="9dp"
		>
            
            <ImageButton
				android:id="@+id/main_statistic"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabStatisticClick"
			>

			</ImageButton>

			<Button 
			    android:background="@null" 
				android:text="@string/statistic"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabStatisticClick"
    		/>
            
		</LinearLayout>
		
		<LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" 
            android:layout_marginLeft="9dp">
            
            <ImageButton
				android:id="@+id/main_game_fast"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabGameFastClick"
			>

			</ImageButton>
			
			<Button 
			    android:background="@null" 
				android:text="@string/game_fast"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabGameFastClick"
    		/>
            
		</LinearLayout>
		
	</LinearLayout>
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="48dip"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
		android:background="@color/blue"
		android:layout_marginBottom="18dp"
	>
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
			android:layout_marginRight="9dp"
		>
            
            <ImageButton
				android:id="@+id/main_info"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabInfoClick"
			>

			</ImageButton>

			<Button 
			    android:background="@null" 
				android:text="@string/info"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabInfoClick"
    		/>
            
		</LinearLayout>
		
		<LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
      		android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" 
            android:layout_marginLeft="9dp">
            
            <ImageButton
				android:id="@+id/main_login"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:background="@null"
				android:onClick="btnTabLoginClick"
			>

			</ImageButton>
			
			<Button 
			    android:background="@null"
			    android:id="@+id/btn_login"
				android:text="@string/login"
      			android:layout_width="fill_parent"
      			android:layout_height="48dip"
      			android:layout_weight="1"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:textSize="24dp"
      			android:onClick="btnTabLoginClick"
    		/>
            
		</LinearLayout>
		
	</LinearLayout>

</LinearLayout>
