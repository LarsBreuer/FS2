<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@color/blue" >

	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="center"
    >

	    <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:orientation="vertical"
        	android:layout_marginRight="4dp"
    	>
    	
	        <ImageView 
	            android:id="@+id/yellow_card_home_1"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        
	        <ImageView 
	            android:id="@+id/yellow_card_home_2"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        	        
	        <ImageView 
	            android:id="@+id/yellow_card_home_3"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        
	    </LinearLayout>
    	
		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:orientation="vertical"
    	> 
    
	    	<Button 
	        	android:id="@+id/btn_home"
        		android:background="@drawable/button_team_blue_inactive"
        		android:textColor="@android:color/white"
				android:textSize="14dip"
				android:textStyle="bold"
	        	android:layout_width="81dip"
	        	android:layout_height="27dip"
	        	android:layout_marginTop="12dp"
	        	android:layout_marginBottom="0dp"
	        	android:layout_marginRight="4dp"
	    	/>
	    
	    	<Button 
	        	android:id="@+id/btn_goals_home"
        		android:background="@drawable/button_result_inactive"
        		android:textColor="@color/standardfarbe"
				android:textSize="27dip"
				android:textStyle="bold"
	        	android:layout_width="81dip"
	        	android:layout_height="81dip"
	        	android:layout_marginTop="0dip"
	        	android:layout_marginBottom="18dp"
	        	android:layout_marginRight="4dp"
	    	/>
	    
		</LinearLayout>
	
		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
    	> 
    
	    	<Button 
	        	android:id="@+id/btn_timer"
        		android:background="@drawable/button_timer_red"
    	    	android:textColor="@android:color/white"
				android:textSize="27dip"
				android:textStyle="bold"
	    	    android:layout_width="108dip"
	        	android:layout_height="108dip"
	        	android:layout_marginTop="12dip"
	        	android:layout_marginBottom="18dip"
	        	android:onClick="uhrClick"
	    	/>
	    
		</LinearLayout>
	
		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:orientation="vertical"
    	> 
    
	    	<Button 
	        	android:id="@+id/btn_away"
        		android:background="@drawable/button_team_red_inactive"
        		android:textColor="@android:color/white"
				android:textSize="14dip"
				android:textStyle="bold"
	        	android:layout_width="81dip"
	        	android:layout_height="27dip"
	        	android:layout_marginTop="12dp"
	        	android:layout_marginBottom="0dp"
	        	android:layout_marginLeft="4dp"
	    	/>
	    
	    	<Button 
	        	android:id="@+id/btn_goals_away"
        		android:background="@drawable/button_result_inactive"
        		android:textColor="@color/standardfarbe"
				android:textSize="27dip"
				android:textStyle="bold"
	        	android:layout_width="81dip"
	        	android:layout_height="81dip"
	        	android:layout_marginTop="0dip"
	        	android:layout_marginBottom="18dp"
	        	android:layout_marginLeft="4dp"
	    	/>
	    
		</LinearLayout>
		
		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:orientation="vertical"
        	android:layout_marginLeft="4dp"
    	>
    	
	        <ImageView 
	            android:id="@+id/yellow_card_away_1"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        
	        <ImageView 
	            android:id="@+id/yellow_card_away_2"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        	        
	        <ImageView 
	            android:id="@+id/yellow_card_away_3"
        		android:layout_width="16dip"
  				android:layout_height="36dip"
  				android:gravity="center"
    		/>
	        
	    </LinearLayout>

    </LinearLayout>
	
    <TabHost 
    	android:id="@android:id/tabhost"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    >
    
        <LinearLayout
        	android:orientation="vertical"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_marginLeft="9dip"
        	android:layout_marginRight="9dip"
        >
	    	
        	<TabWidget
            	android:id="@android:id/tabs"
            	android:layout_width="fill_parent"
            	android:layout_height="32dip" 
            />
        	
        	<FrameLayout
            	android:id="@android:id/tabcontent"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            >
        	    
        	</FrameLayout>
        	
    	</LinearLayout>
    	
	</TabHost>

</LinearLayout>