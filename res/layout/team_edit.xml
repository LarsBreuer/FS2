<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/blue"
>

<LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingLeft="18dp"
  android:paddingRight="18dp"
  android:orientation="vertical"
>
  
	<TextView 
	    android:text="@string/club_name" 
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dip"
	/>
	
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:stretchColumns="0"
    > 
        
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="36dp" 
        >
  		
			<EditText
	    		android:id="@+id/team_name"
	    		android:inputType="textCapWords"
	    		android:layout_width="0dp"
        		android:layout_height="36dp"
        		android:paddingLeft="9dip"
        		android:textColor="@color/grey_dark"
        		android:textCursorDrawable="@null"
        		android:textSize="18dp" 
        		android:background="@android:color/white"
			/>
    	
			<Button 
        		android:id="@+id/btn_delete_team_name"
        		android:background="@drawable/delete"
        		android:layout_width="36dp"
        		android:layout_height="36dp"
        		android:layout_marginRight="18dp"
    		/>
			
			<Button 
        		android:id="@+id/link_to_choose_club"
        		android:background="@drawable/btn_next"
        		android:layout_width="45dp"
        		android:layout_height="36dp"
        		android:textSize="18dp" 
        		android:layout_gravity="right"
    		/>
		
		</TableRow>
        
    </TableLayout>

	<TextView 
	    android:text="@string/club_short" 
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dip" 
	/>
	
	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="36dp"
  		android:orientation="horizontal"
  	>
  		
		<EditText 
	    	android:id="@+id/team_short"
	    	android:inputType="textCapCharacters"
			android:layout_width="136dp"
        	android:layout_height="36dp"
        	android:paddingLeft="9dip"
        	android:textColor="@color/grey_dark"
        	android:textCursorDrawable="@null"
        	android:textSize="18dp" 
        	android:background="@android:color/white"
		/>
		
		<Button 
        	android:id="@+id/btn_delete_team_short"
        	android:background="@drawable/delete"
        	android:layout_width="36dp"
        	android:layout_height="36dp"
        	android:layout_marginRight="18dp"
    	/>
		
		<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="36dp" 
        	android:orientation="vertical"
    	> 
    	
			<Button 
        		android:id="@+id/btn_okay"
        		android:background="@drawable/btn_keyboard"
        		android:layout_width="45dp"
        		android:layout_height="36dp"
        		android:textSize="18dip" 
        		android:layout_gravity="right"
    		/>
			
		</LinearLayout>
		
	</LinearLayout>
	
	<TextView 
	    android:text="@string/male_female" 
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dip" 
	/>
		
	<Spinner
        android:id="@+id/spinner_male_female"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:paddingLeft="9dip"
        android:textColor="@color/grey_dark"
        android:textSize="18dp" 
        android:background="@android:color/white"
        android:entries="@array/array_male_female"

    />

	<TextView 
	    android:text="@string/stage_of_life" 
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dip" 
	/>
		
	<Spinner
        android:id="@+id/spinner_stage_of_life"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:paddingLeft="9dip"
        android:textColor="@color/grey_dark"
        android:textSize="18dp" 
        android:background="@android:color/white"
        android:entries="@array/array_stage_of_life"

    />
	
	<TextView 
	    android:text="@string/team" 
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dip" 
	/>
		
	<Spinner
        android:id="@+id/spinner_level"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:paddingLeft="9dip"
        android:textColor="@color/grey_dark"
        android:textSize="18dp" 
        android:background="@android:color/white"
        android:entries="@array/array_level"

    />
	
	<Button 
        android:id="@+id/player_manage"
        android:background="@color/grey_dark"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="@string/player_manage"
        android:textColor="@android:color/white"
        android:textSize="18dip" 
        android:layout_marginTop="36dp"
    />
	
	<Button 
        android:id="@+id/synch"
        android:background="@color/grey_dark"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="@string/synchro"
        android:textColor="@android:color/white"
        android:textSize="18dip" 
        android:layout_marginTop="18dp"
    />
	
	<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
    > 
        
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        >
        	
        	<Button 
        		android:id="@+id/btn_save"
        		android:background="@color/grey_dark"
        		android:layout_width="fill_parent"
        		android:layout_height="36dp"
        		android:text="@string/save"
        		android:textColor="@android:color/white"
        		android:textSize="18dip" 
        		android:layout_weight="1"
        		android:layout_marginRight="10dp"
    		/>
        	
        	<Button 
        		android:id="@+id/btn_delete"
        		android:background="@color/grey_dark"
        		android:layout_width="fill_parent"
        		android:layout_height="36dp"
        		android:text="@string/delete"
        		android:textColor="@android:color/white"
        		android:textSize="18dip" 
        		android:layout_weight="1"
        		android:layout_marginLeft="10dp"
    		/>
        
        </TableRow>
        
    </TableLayout>

</LinearLayout>
</ScrollView>