<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_view"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@color/blue" 
  	android:paddingLeft="18dp"
	android:paddingRight="18dp"
	android:orientation="vertical"
>
	
    <LinearLayout
        android:id="@+id/lyt_overview_smart"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="vertical"
    > 
    
		<LinearLayout
		    android:id="@+id/lyt_button_ludr"
       		android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:gravity="center"
       		android:orientation="horizontal"
    	> 
    
			<Button 
      		  	android:id="@+id/left"
      	  		android:background="@drawable/arrow_left"
        		android:layout_width="18dp"
        		android:layout_height="18dp"
        		android:layout_marginRight="9dp"
        		android:gravity="center_vertical|center_horizontal"
       			android:layout_marginTop="18dp"
        		android:layout_marginBottom="18dp"
    		/>
		
			<Button 
        		android:id="@+id/up"
        		android:background="@drawable/arrow_up"
        		android:layout_width="18dp"
        		android:layout_height="18dp"
        		android:layout_marginRight="9dp"
        		android:gravity="center_vertical|center_horizontal"
       			android:layout_marginTop="18dp"
        		android:layout_marginBottom="18dp"
    		/>
		
			<Button 
        		android:id="@+id/down"
        		android:background="@drawable/arrow_down"
        		android:layout_width="18dp"
        		android:layout_height="18dp"
        		android:layout_marginRight="9dp"
        		android:gravity="center_vertical|center_horizontal"
       			android:layout_marginTop="18dp"
        		android:layout_marginBottom="18dp"
    		/>
		
			<Button 
        		android:id="@+id/right"
        		android:background="@drawable/arrow_right"
        		android:layout_width="18dp"
        		android:layout_height="18dp"
        		android:gravity="center_vertical|center_horizontal"
       			android:layout_marginTop="18dp"
        		android:layout_marginBottom="18dp"
    		/>	
		
		</LinearLayout>

		<TextView 
	   		android:id="@+id/player"
	   		android:text="Player"
	       	android:layout_width="fill_parent"
    	   	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textColor="@android:color/white"
        	android:textSize="24dip"
		/>
		
		<TextView 
	    	android:id="@+id/game"
	    	android:text="Game"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
       		android:gravity="center"
        	android:textColor="@android:color/white"
        	android:textSize="14dip"
        	android:layout_marginBottom="18dp"
		/>
	
	</LinearLayout>
	
    <LinearLayout
		android:id="@+id/lyt_overview_tab"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:orientation="horizontal"
    > 
    
		<Button 
       		android:id="@+id/tab_left"
      	  	android:background="@drawable/arrow_left"
        	android:layout_width="18dp"
        	android:layout_height="18dp"
        	android:layout_marginRight="9dp"
        	android:gravity="center_vertical|center_horizontal"
       		android:layout_marginTop="18dp"
        	android:layout_marginBottom="18dp"
    	/>	
	
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
	>

        <RelativeLayout
			android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
      		android:gravity="center_vertical|center_horizontal"
		>
            
            <ImageView
    			android:id="@+id/img_goals"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center_vertical|center_horizontal"
    		/>

			<TextView
    			android:id="@+id/txt_goals"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_alignTop="@+id/img_goals"
    			android:layout_alignBottom="@+id/img_goals"
				android:textStyle="bold"
				android:textSize="24dip"
    			android:gravity="center"
    			android:textColor="@android:color/white" 
    		/>	
            
		</RelativeLayout>

		<RelativeLayout
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
      		android:gravity="center_vertical|center_horizontal"
		>
            
            <ImageView
    			android:id="@+id/img_effective"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    		/>

			<TextView
    			android:id="@+id/txt_effective"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_alignTop="@+id/img_effective"
    			android:layout_alignBottom="@+id/img_effective"
				android:textStyle="bold"
				android:textSize="24dip"
    			android:gravity="center"
    			android:textColor="@android:color/white" 
    		/>	
            
		</RelativeLayout>

	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/lyt_label1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
	>
		
	    <TextView
    		android:text="@string/goals"
    		android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
			android:textSize="24dip"
    		android:gravity="center"
    		android:textColor="@android:color/white"
    		android:layout_marginTop="24dp"
        	android:layout_marginBottom="48dp"
    	/>
	    
	    <TextView
    		android:text="@string/efficiency"
    		android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
			android:textSize="24dip"
    		android:gravity="center"
    		android:textColor="@android:color/white" 
    		android:layout_marginTop="24dp"
        	android:layout_marginBottom="48dp"
    	/>
	    
	</LinearLayout>

    <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
	>
		
		<RelativeLayout
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
      		android:gravity="center_vertical|center_horizontal"
		>
            
            <ImageView
    			android:id="@+id/img_time"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    		/>

			<TextView
    			android:id="@+id/txt_time"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_alignTop="@+id/img_time"
    			android:layout_alignBottom="@+id/img_time"
				android:textStyle="bold"
				android:textSize="24dip"
    			android:gravity="center"
    			android:textColor="@android:color/white" 
    		/>	
            
		</RelativeLayout>
		
		<RelativeLayout
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
      		android:gravity="center_vertical|center_horizontal"
		>
            
            <ImageView
    			android:id="@+id/img_mark"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    		/>

			<TextView
    			android:id="@+id/txt_mark"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_alignTop="@+id/img_mark"
    			android:layout_alignBottom="@+id/img_mark"
				android:textStyle="bold"
				android:textSize="24dip"
    			android:gravity="center"
    			android:textColor="@android:color/white" 
    		/>	
            
		</RelativeLayout>
	
	</LinearLayout>
	
    <LinearLayout
	    android:id="@+id/lyt_label2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal"
	>
		
	    <TextView
    		android:text="@string/time"
    		android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
			android:textSize="24dip"
    		android:gravity="center"
    		android:textColor="@android:color/white"
    		android:layout_marginTop="24dp"
        	android:layout_marginBottom="48dp"
    	/>
	    
	    <TextView
    		android:text="@string/mark"
    		android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
			android:textSize="24dip"
    		android:gravity="center"
    		android:textColor="@android:color/white" 
    		android:layout_marginTop="24dp"
        	android:layout_marginBottom="48dp"
    	/>
	    
	</LinearLayout>
  
</LinearLayout>