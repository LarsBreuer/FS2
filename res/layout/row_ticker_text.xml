<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_ticker_text"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/blue"
>

	<LinearLayout 
    	android:id="@+id/row_content"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@android:color/white"
	>
	
		<LinearLayout
    		android:layout_width="16dip"
    		android:layout_height="fill_parent"
    		android:orientation="vertical"
    	>
    
			<View 
		    	android:id="@+id/rowTickerTeamColor"
        		android:layout_width="16dip"
  				android:layout_height="fill_parent"
  				android:background="@color/heimblau"
    		/>
		
		</LinearLayout>
    
		<LinearLayout
    		android:layout_width="70dip"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    	>
    
	    	<TextView 
	    	    android:id="@+id/rowTickerTime"
      			android:layout_width="70dip"
      			android:layout_height="20dip"
      			android:gravity="center"
      			android:textColor="@color/grey_dark"
      			android:maxLines="1"
      			android:ellipsize="end"
      			android:textSize="12dip"
    		/>
	    
	    	<RelativeLayout
    			android:layout_width="70dip"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    		>
    		
				<ImageView
    				android:id="@+id/rowTickerIcon"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    			/>

				<TextView
    				android:id="@+id/rowTickerText"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_alignTop="@+id/rowTickerIcon"
    				android:layout_alignBottom="@+id/rowTickerIcon"
					android:textStyle="bold"
					android:textSize="17dip"
    				android:gravity="center"
    				android:textColor="@color/grey_dark" 
    			/>	
			
			</RelativeLayout>
		
		</LinearLayout>
	
		<LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		>
    	
    		<TextView android:id="@+id/rowTickerHeadline"
      			android:layout_width="wrap_content"
      			android:layout_height="20dip"
      			android:gravity="center_vertical|left"
      			android:textColor="@color/grey_dark"
      			android:maxLines="1"
      			android:ellipsize="end"
      			android:textSize="12dip"
      			android:textStyle="bold"
    		/>
    	
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    		>
			
	    		<TextView android:id="@+id/rowTickerEventText"
      				android:layout_width="wrap_content"
      				android:layout_height="wrap_content"
      				android:gravity="left|top"
      				android:textColor="@color/grey_dark"
      				android:ellipsize="end"
      				android:textSize="16dip"
    			/>
	    	
	    	</LinearLayout>
	
		</LinearLayout>
	
	</LinearLayout>

	<LinearLayout
	    android:layout_width="10dip"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:gravity="center_vertical|center_horizontal"
		android:layout_alignParentRight="true"
	>
	
		<ImageView
			android:background="@drawable/forward"
			android:layout_width="7dip"
			android:layout_height="12dip"
			android:gravity="center_vertical|center_horizontal"
		>

		</ImageView>
		
	</LinearLayout>

</RelativeLayout>